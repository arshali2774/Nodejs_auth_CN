<!-- Flash message -->
<% if (messageError && messageError.length>0) { %>
<div id="notification">
  <p><i class="fa-solid fa-circle-xmark"></i></p>
  <p><%= messageError %></p>
</div>
<% } %>
<div id="reset_display" class="default_container">
  <h1>Reset Password</h1>
  <div class="fingerprint_icon">
    <i class="fa-solid fa-fingerprint"></i>
  </div>
  <form
    action="/resetpassword"
    method="POST"
    class="form_styles"
    autocomplete="off"
  >
    <input
      type="email"
      id="email"
      name="email"
      required
      placeholder="Email"
      autocomplete="new-user-email"
    />
    <input
      type="password"
      id="password"
      name="password"
      required
      placeholder="Password"
      autocomplete="new-password"
    />
    <button type="submit"><i class="fa-solid fa-key"></i>Reset Password</button>
  </form>
</div>
